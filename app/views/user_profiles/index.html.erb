<p id="notice"><%= notice %></p>

<h1>User Profile</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lastname</th>
      <th>Street</th>
      <th>County</th>
      <th>Postal code</th>
      <th>City</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_profiles.each do |user_profile| %>
      <tr>
        <td><%= user_profile.firstname %></td>
        <td><%= user_profile.lastname %></td>
        <td><%= user_profile.street %></td>
        <td><%= user_profile.county %></td>
        <td><%= user_profile.postal_code %></td>
        <td><%= user_profile.city %></td>
        <td><%= user_profile.user %></td>
        <td><%= link_to 'Show', user_profile %></td>
        <td><%= link_to 'Edit', edit_user_profile_path(user_profile) %></td>
        <td><%= link_to 'Destroy', user_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Profile', new_user_profile_path %>


<h1>Orders</h1>




<table id="customers">
    <thead>
    <tr>
      <th>Order Id</th>
      <th>User</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
<% @orders.each do |order| %>

<tr>
  <td><%= order.id %></td>
        <td><%= order.user.email %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'Show', order, :class => "button" %></td>
        <td><%= link_to 'Edit', edit_order_path(order), :class => "button" %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button" %></td>
</tr>

<% end %>

</table>
